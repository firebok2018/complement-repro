private void startPlay(String currentTitle){
selectedFile.setText(currentTitle);
seekBar.setProgress(0);
player.stop();
player.reset();
try{
player.setdataSource(file);
player.prepare();
player.start();
}catch(filelegalStateException e){
	e.printStrackTrace();
}
seekbar.setMAx(player.getDuration);
playButton.setImageResource(android.R.drawable.ic_playpause);
updatePosition();
IsStarte=true;
isStarted=false;
}
private void stopplay(){
player.isStop();
player.isExit();
}
